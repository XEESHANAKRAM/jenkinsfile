pipeline {
    agent any
    environment {
        name = 'zeeshan'
    }
    parameters {
        string(name: 'person', defaultValue: 'zeeshan', description: 'Who are you?')
        booleanParam(name: 'TOGGLE', defaultValue: true, description: 'Toggle this value')
        choice(name: 'CHOICE', choices: ['One', 'Two', 'Three'], description: 'Pick something')
    }
    stages {
        stage('Build command') {
            steps {
                sh '''
                ls
                pwd
                date
                '''
            }
        }
        stage('Envir variable') {
            steps {
                sh 'echo "${BUILD_ID}"'
                sh 'echo "${TOGGLE}"'
            }
        }
        stage('Continue') {
            steps {
                input(message: "Are you sure?", ok: "Yes")
            }
        }
        
        stage('Deploy Production') {
            steps {
                echo 'Hello World - Deploy Production'
            }
        }
    }
    post { 
        always { 
            echo 'I will always say Hello again!'
        }
        failure{
             echo 'Fail!'
        }
        success{
             echo 'success'
        }
    }
}
